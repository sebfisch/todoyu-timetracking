<li id="task-{$track.id_task}-track-{$track.id}" class="listItem {$class} {if isPersonID($track.id_person_create)}contextmenuTrack{/if}">
	<dl>
		<dt>
			{if $track.editable}
				<span class="icon editableItem iconEdit pointerCursor" onclick="Todoyu.Ext.timetracking.Task.editTrack({$track.id_task}, {$track.id})" title="{Label timetracking.ext.tasktab.edit}"> </span>
			{else}
				<span class="icon""> </span>
			{/if}
		</dt>
		<dd>
			{if $track.editable}
				<a class="overflow" href="javascript:void(0)" onclick="Todoyu.Ext.timetracking.Task.editTrack({$track.id_task}, {$track.id})" title="{Label timetracking.ext.tasktab.edit}">
			{/if}
				<span class="dateWithTime">
					{dateFormat $track.date_track D2M2Y2} - {HourMinSec $track.workload_tracked}
				</span>
				<span class="userName">{personLabel idPrefix="track_personowner" idRecord="$track.id" idPerson=$track.id_person_create}</span>
			{if $track.comment}
				<span class="taskComment timeTrackComment overflow">{htmlencode $track.comment}</span>
			{/if}
			{if $track.editable}
				</a>
			{/if}
		</dd>
	</dl>
</li>