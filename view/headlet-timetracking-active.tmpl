<li class="tracking">
	<a href="javascript:void(0)" onclick="Todoyu.Ext.project.goToTaskInProject({$task.id})" title="{Label LLL:timetracking.jumpToTask}" class="title">{$task.id_project}.{$task.tasknumber}: {truncate($task.title, 30, '...', true)}</a>
	<a href="javascript:void(0)" onclick="Todoyu.Ext.project.goToTaskInProject(0,{$task.project.id})" title="{Label LLL:timetracking.jumpToProject}" class="project">({truncate($task.company.title, 30)}:{truncate($task.project.title, 30)})</a>
<div class="time">
	<span class="tracking" title="{Label LLL:timetracking.tasktab.time_elapsed}">
		{Label LLL:timetracking.tasktab.time_elapsed} {HourMinSec $tracked}
		+<span id="{$id}-tracking" class="currentTracking">{HourMinSec $tracking}</span>
	</span>


{if $showPercent}
<div class="percent">
	<div class="number" id="{$id}-percent">
		{$percent}%
	</div>
	<div class="bar">
		{$max = 100}
		{$length = $percent/100*$max}
		{if $length>$max}
			{$length = $max}
		{/if}
		<div class="progress" id="{$id}-progress" style="width:{$length}px" class="progress {$barClass}"></div>
	</div>

</div>
{/if}
({Label LLL:timetracking.estimated_workload}: {HourMin $task.estimated_workload})
</div>
<div class="stop">
	{Button  onclick="Todoyu.Ext.timetracking.Task.stop($task.id)" class="stopTracking" title="LLL:timetracking.stop"}
</div>
</li>