<div class="tabBlock timetrackingButtons">
{if $trackable}
	{Button label=$buttonLabel id="task-$idTask-timetracking-button" class=$class onclick="Todoyu.Ext.timetracking.Task.$function($idTask)"}
{/if}
	<div class="elapsedTime">
		<a onclick="Todoyu.Ext.timetracking.Task.toggleList({$idTask})" href="javascript:void(0)" id="task-{$idTask}-timetrack-trigger-1">
			{Label timetracking.tasktab.time_elapsed}
			<span id="task-{$idTask}-timetrack-trackedtime">{HourMinSec $totalTrackedTime}</span>
		</a>
		<span class="timeCurrentSession">
			| +
			<span id="task-{$idTask}-timetrack-currentsession">{HourMinSec $trackedTime}</span>
		</span>
		<a class="icon timing toggle" onclick="Todoyu.Ext.timetracking.Task.toggleList({$idTask})" href="javascript:void(0)" id="task-{$idTask}-timetrack-trigger-2" title="{Label timetracking.tasktab.toggle}">
			<span class="hidden">{Label timetracking.tasktab.toggle}</span>
		</a>
	</div>
</div>