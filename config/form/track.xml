<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=timetracking&amp;controller=tasktab</attribute>
		<attribute name="name">timetrack</attribute>
		<attribute name="class">formTimeTrack overflow</attribute>
	</attributes>
	<hiddenFields>
		<field name="id" />
		<field name="id_task" />
	</hiddenFields>
	<fieldsets>
		<fieldset name="fieldset">
			<legend>Edit timetracking record</legend>
			<class>myFieldsetClass</class>
			<elements>
				<field type="dateinput" name="date_track">
					<label>timetracking.attr.date_track</label>
				</field>
				<field type="timeinput" name="workload_tracked">
					<label>timetracking.attr.workload_tracked</label>
				</field>
				<field type="timeinput" name="workload_chargeable">
					<label>timetracking.attr.workload_chargeable</label>
				</field>
				<field type="textinput" name="comment">
					<label>timetracking.attr.comment</label>
				</field>
			</elements>
		</fieldset>
		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>

				<field type="cancelButton" name="cancel">
					<onclick>Todoyu.Ext.timetracking.Task.cancelTrackEditing(#id_task#, #id#)</onclick>
				</field>

				<field type="saveButton" name="save">
					<onclick>Todoyu.Ext.timetracking.Task.saveTrack(#id_task#, #id#)</onclick>
				</field>

			</elements>
		</fieldset>
	</fieldsets>
</form>